<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:paddingBottom="6dp"
    android:elevation="4dp"
    card_view:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#ECEFF1"
        >

        <TextView android:id="@+id/dosimeter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            />

        <TextView android:id="@+id/dosimeter_lastDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dosimeter_name"
            android:layout_marginEnd="4dp"
            android:textSize="16sp"
            />

        <TextView android:id="@+id/dosimeter_doseUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dosimeter_name"
            android:layout_toEndOf="@id/dosimeter_lastDose"
            android:textSize="14sp"
            />

        <TextView android:id="@+id/dosimeter_lastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dosimeter_name"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>